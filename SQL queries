SELECT * FROM Туры;

SELECT * FROM Туры WHERE id_страны = (SELECT id_страны FROM Страны WHERE Страна = 'Париж');

SELECT * FROM Туры WHERE id_вида_тура = (SELECT id_вида FROM Виды_туров WHERE Вид_тура = 'люкс');

SELECT * FROM Туры WHERE Цена BETWEEN :min_price AND :max_price;

SELECT * FROM Туры WHERE MONTH(Дата_отправления) = :month;

SELECT * FROM Продажи WHERE Дата BETWEEN :start_date AND :end_date;

SELECT * FROM Туры WHERE Цена BETWEEN :min_price AND :max_price;

SELECT * FROM Туры WHERE id_страны = (SELECT id_страны FROM Страны WHERE Страна = :countr

SELECT * FROM Продажи 
INNER JOIN Клиенты ON Продажи.id_клиента = Клиенты.id_клиента 
WHERE Клиенты.Фамилия = :last_name;

SELECT * FROM Туры WHERE Количество_дней > :duration;

SELECT DISTINCT Клиенты.* 
FROM Клиенты 
INNER JOIN Продажи ON Клиенты.id_клиента = Продажи.id_клиента 
INNER JOIN Туры ON Продажи.id_тура = Туры.id_тура 
INNER JOIN Страны ON Туры.id_страны = Страны.id_страны 
WHERE Страны.Страна = :country;

SELECT Туры.* 
FROM Туры 
INNER JOIN Продажи ON Туры.id_тура = Продажи.id_тура 
INNER JOIN Клиенты ON Продажи.id_клиента = Клиенты.id_клиента 
WHERE Клиенты.Фамилия = :last_name;

SELECT DISTINCT Клиенты.* 
FROM Клиенты 
INNER JOIN Продажи ON Клиенты.id_клиента = Продажи.id_клиента 
WHERE MONTH(Продажи.Дата) = :month;

SELECT * FROM Туры WHERE id_тура NOT IN (SELECT id_тура FROM Продажи);

SELECT * FROM Туры WHERE (Количество_людей - (SELECT COUNT(*) FROM Продажи WHERE Продажи.id_тура = Туры.id_тура)) < :remaining_seats;
